<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/def_text"
        android:textSize="@dimen/textview_translate_textsize"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/pos"
        android:textSize="@dimen/text_pos_size"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/row_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_dict_size"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/synonyms"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/text_synonyms_margin"
        android:layout_marginLeft="@dimen/text_synonyms_margin"
        android:textSize="@dimen/text_dict_size"
        android:textColor="@color/colorSynonym"/>
    </LinearLayout>
    <TextView
        android:id="@+id/means"
        android:layout_marginLeft="@dimen/text_means_margin"
        android:layout_marginStart="@dimen/text_means_margin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_dict_size"
        android:textColor="@color/colorMeans"/>
    <TextView
        android:id="@+id/examples"
        android:layout_marginLeft="@dimen/text_examples_margin"
        android:layout_marginStart="@dimen/text_examples_margin"
        android:textSize="@dimen/text_dict_size"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/colorBlack"/>

</LinearLayout>