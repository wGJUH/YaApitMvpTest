<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/input_word_frame"
    android:focusable="true"
    android:padding="10dp">

    <test.ya.translater.wgjuh.yaapitmvptest.CustomEditText
        android:id="@+id/edittext_translate_word"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_clear_input"
        android:gravity="start"
        android:backgroundTint="@color/transparent"
        android:inputType="textMultiLine"
        android:textColor="@color/colorBlack" />

    <ImageButton
        android:id="@+id/btn_clear_input"
        android:contentDescription="@string/content_description_btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/transparent"
        android:src="@drawable/ic_clear" />
</RelativeLayout>